<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp">

    <TextView
        android:id="@+id/tv_packageSources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="Yatra"
        android:background="@drawable/serviceprovider_bg_white"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="14sp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/tv_packageSources"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|top"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="21dp"
        android:visibility="gone"
        android:layout_marginStart="41dp"
        android:src="@drawable/colored_rating" />

</RelativeLayout>
